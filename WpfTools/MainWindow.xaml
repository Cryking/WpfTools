<Window x:Class="WpfTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTools"
        mc:Ignorable="d"
        Title="多功能工具箱" Height="610" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- 按钮样式 -->
        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2968A8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 文本框样式 -->
        <Style x:Key="ToolTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- 标签样式 -->
        <Style x:Key="ToolLabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="多功能工具箱" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"/>
            
            <!-- 功能按钮区域 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="定时提醒" Name="btnReminderSettings" 
                        Style="{StaticResource ToolButtonStyle}"
                        Width="120" Click="BtnReminderSettings_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- 主要功能区域 -->
        <TabControl Grid.Row="1" Background="Transparent">
            <!-- JSON工具标签页 -->
            <TabItem Header="JSON格式化工具">
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 输入区域 -->
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="150"/>
                            </Grid.RowDefinitions>

                            <!-- 输入区域标题 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                                <Label Content="输入JSON：" Style="{StaticResource ToolLabelStyle}"/>
                                <Button Content="清空" Name="btnClearJsonInput" 
                                       Style="{StaticResource ToolButtonStyle}"
                                       Width="60" Click="BtnClearJsonInput_Click"/>
                            </StackPanel>

                            <!-- JSON输入文本框 -->
                            <TextBox Grid.Row="1" Name="txtJsonInput" 
                                    Style="{StaticResource ToolTextBoxStyle}"
                                    TextWrapping="NoWrap" 
                                    AcceptsReturn="True"
                                    VerticalAlignment="Stretch"/>
                        </Grid>

                        <!-- 可拖动的分隔条 -->
                        <GridSplitter Grid.Row="1" Height="5" 
                                      HorizontalAlignment="Stretch" 
                                      Background="#E0E0E0"
                                      ShowsPreview="True"
                                      VerticalAlignment="Center"/>

                        <!-- 操作按钮区域 -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                   HorizontalAlignment="Center" Height="32">
                            <Button Content="美化格式" Name="btnFormatJson" 
                                   Style="{StaticResource ToolButtonStyle}"
                                   Click="BtnFormatJson_Click"/>
                            <Button Content="压缩格式" Name="btnCompressJson" 
                                   Style="{StaticResource ToolButtonStyle}"
                                   Click="BtnCompressJson_Click"/>
                            <Button Content="验证JSON" Name="btnValidateJson" 
                                   Style="{StaticResource ToolButtonStyle}"
                                   Click="BtnValidateJson_Click"/>
                            <Button Content="复制结果" Name="btnCopyJsonResult" 
                                   Style="{StaticResource ToolButtonStyle}"
                                   Click="BtnCopyJsonResult_Click"/>
                        </StackPanel>

                        <!-- 输出区域 -->
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 输出区域标题 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <Label Content="格式化结果：" Style="{StaticResource ToolLabelStyle}"/>
                            </StackPanel>

                            <!-- JSON输出文本框 -->
                            <RichTextBox Grid.Row="1" Name="txtJsonOutput" 
                                         VerticalAlignment="Stretch"
                                         IsReadOnly="True"
                                         Padding="8"
                                         BorderBrush="#D1D5DB"
                                         BorderThickness="1"
                                         Background="White"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Auto"
                                         FontFamily="Consolas"
                                         FontSize="12">
                                <RichTextBox.Resources>
                                    <Style TargetType="{x:Type Paragraph}">
                                        <Setter Property="Margin" Value="0"/>
                                    </Style>
                                </RichTextBox.Resources>
                            </RichTextBox>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- 时间戳转换标签页 -->
            <TabItem Header="时间戳转换">
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 时间戳转换区域 -->
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 时间戳输入区域标题 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <Label Content="时间戳输入：" Style="{StaticResource ToolLabelStyle}"/>
                                <Button Content="获取当前时间戳" Name="btnGetCurrentTimestamp" 
                                       Style="{StaticResource ToolButtonStyle}"
                                       Width="120" Click="BtnGetCurrentTimestamp_Click"/>
                                <Button Content="清空" Name="btnClearTimestampInput" 
                                       Style="{StaticResource ToolButtonStyle}"
                                       Width="60" Click="BtnClearTimestampInput_Click"/>
                            </StackPanel>

                            <!-- 时间戳输入框 -->
                            <TextBox Grid.Row="1" Name="txtTimestampInput" 
                                    Style="{StaticResource ToolTextBoxStyle}"
                                    Height="60"
                                    TextWrapping="NoWrap" 
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Auto"/>
                        </Grid>

                        <!-- 操作按钮区域 -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                   HorizontalAlignment="Center" Margin="0,12">
                            <Button Content="时间戳转日期" Name="btnTimestampToDateTime" 
                                   Style="{StaticResource ToolButtonStyle}"
                                   Click="BtnTimestampToDateTime_Click"/>
                            <Button Content="日期转时间戳" Name="btnDateTimeToTimestamp" 
                                   Style="{StaticResource ToolButtonStyle}"
                                   Click="BtnDateTimeToTimestamp_Click"/>
                            <Button Content="复制结果" Name="btnCopyTimestampResult" 
                                   Style="{StaticResource ToolButtonStyle}"
                                   Click="BtnCopyTimestampResult_Click"/>
                        </StackPanel>

                        <!-- 日期时间输入区域 -->
                        <StackPanel Grid.Row="2" Margin="0,15,0,0">
                            <Label Content="日期时间输入：" Style="{StaticResource ToolLabelStyle}"/>
                            <TextBox Name="txtDateTimeInput" 
                                    Style="{StaticResource ToolTextBoxStyle}"
                                    Height="60"
                                    TextWrapping="NoWrap" 
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- 转换结果区域 -->
                        <StackPanel Grid.Row="3" Margin="0,15,0,0">
                            <Label Content="转换结果：" Style="{StaticResource ToolLabelStyle}"/>
                            <TextBox Name="txtTimestampResult" 
                                    Style="{StaticResource ToolTextBoxStyle}"
                                    Height="120"
                                    TextWrapping="NoWrap" 
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Auto"
                                    IsReadOnly="True"
                                    Background="#F9F9F9"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>

            <!-- 图片/Base64转换标签页 -->
            <TabItem Header="图片/Base64转换">
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 图片输入区域 -->
                        <StackPanel Grid.Row="0">
                            <Label Content="图片输入：" Style="{StaticResource ToolLabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <Button Content="选择图片" Name="btnSelectImage" 
                                       Style="{StaticResource ToolButtonStyle}"
                                       Click="BtnSelectImage_Click"/>
                                <Button Content="粘贴图片" Name="btnPasteImage" 
                                       Style="{StaticResource ToolButtonStyle}"
                                       Click="BtnPasteImage_Click"/>
                                <Button Content="清空图片" Name="btnClearImage" 
                                       Style="{StaticResource ToolButtonStyle}"
                                       Click="BtnClearImage_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 图片预览区域 -->
                        <Border Grid.Row="1" BorderBrush="#D1D5DB" BorderThickness="1" 
                               CornerRadius="4" Margin="0,10,0,15">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                        VerticalScrollBarVisibility="Auto">
                                <Image Name="imgPreview" Stretch="Uniform" 
                                      MaxWidth="400" MaxHeight="300"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </ScrollViewer>
                        </Border>

                        <!-- 操作按钮 -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                   HorizontalAlignment="Center" Margin="0,10">
                            <Button Content="图片转Base64" Name="btnImageToBase64" 
                                   Style="{StaticResource ToolButtonStyle}"
                                   Click="BtnImageToBase64_Click"/>
                            <Button Content="Base64转图片" Name="btnBase64ToImage" 
                                   Style="{StaticResource ToolButtonStyle}"
                                   Click="BtnBase64ToImage_Click"/>
                            <Button Content="复制Base64" Name="btnCopyBase64" 
                                   Style="{StaticResource ToolButtonStyle}"
                                   Click="BtnCopyBase64_Click"/>
                        </StackPanel>

                        <!-- Base64文本区域 -->
                        <StackPanel Grid.Row="3" Margin="0,15,0,0">
                            <Label Content="Base64编码：" Style="{StaticResource ToolLabelStyle}"/>
                            <TextBox Name="txtBase64" 
                                    Style="{StaticResource ToolTextBoxStyle}"
                                    Height="150"
                                    TextWrapping="NoWrap" 
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
